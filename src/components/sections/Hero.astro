---
const technologies = [
  'UI/UX Design',
  'React.js',
  'TypeScript',
  'TailwindCSS',
  'Framer Motion',
  'Next.js',
  'JavaScript',
  'Project Management',
  'Agile Methodologies',
  'Figma',
  'Jira',
  'Confluence',
  'HTML5',
  'CSS3',
  'Git'
];
---

<section class="min-h-screen relative flex items-center section-padding overflow-hidden">
  {/* Background Elements */}
  <div class="absolute inset-0 bg-dark-100"></div>
  <div class="absolute inset-0 bg-grid opacity-[0.03]"></div>
  <div class="absolute inset-0 bg-gradient-radial from-primary/5 via-transparent to-transparent"></div>

  <div class="container mx-auto container-padding relative">
    <div class="max-w-6xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        {/* Content */}
        <div class="space-y-8 text-center lg:text-left">
          {/* Status Badge */}
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full glass">
            <span class="w-2 h-2 rounded-full bg-success animate-pulse"></span>
            <span class="text-success-light text-sm">Available for Projects</span>
          </div>

          {/* Main Content */}
          <div class="space-y-4 sm:space-y-6">
            <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold leading-tight sm:leading-tight">
              <span class="bg-gradient-to-r from-primary to-primary-light text-transparent bg-clip-text block">
                Frontend Developer
              </span>
              <span class="text-white/90">
                & Project Manager
              </span>
            </h1>
            <p class="text-base sm:text-lg md:text-xl text-white/70 max-w-2xl mx-auto">
              Passionate about creating beautiful, responsive user interfaces and leading 
              project teams to successfully deliver high-quality products. 
              Combining technical expertise with project management skills to drive results.
            </p>
          </div>

          {/* CTA Buttons */}
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a href="#projects" 
              class="group relative px-6 py-3 bg-gradient-to-r from-[#9b111e] to-[#ff1616] text-white rounded-lg
                     overflow-hidden transition-all duration-300 hover:shadow-lg hover:shadow-[#ff1616]/20
                     hover:-translate-y-0.5 active:translate-y-0 text-sm uppercase tracking-wide"
            >
              <span class="relative z-10 inline-block gap-2">
                <svg 
                class="w-4 h-4 inline-block group-hover:translate-x-0.5 transition-transform" 
                fill="none" 
                viewBox="0 0 24 24" 
                stroke="currentColor"
              >
                <path 
                  stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="2" 
                  d="M17 8l4 4m0 0l-4 4m4-4H3"
                />
              </svg>
                View My Work
              </span>
              <div class="absolute inset-0 bg-gradient-to-r from-[#ff1616] to-[#9b111e] opacity-0 
                          group-hover:opacity-100 transition-opacity duration-300" />
            </a>
            <a href="#contact" 
              class="group px-6 py-3 rounded-lg border border-white/10 text-white/80
                     hover:bg-white/5 hover:-translate-y-0.5 active:translate-y-0
                     transition-all duration-300 text-sm uppercase tracking-wide"
            >
              Get in Touch
              <svg 
                class="w-4 h-4 ml-2 inline-block group-hover:translate-x-0.5 transition-transform" 
                fill="none" 
                viewBox="0 0 24 24" 
                stroke="currentColor"
              >
                <path 
                  stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="2" 
                  d="M3 8l4-4m0 0l4 4m-4-4v12"
                />
              </svg>
            </a>
          </div>

          {/* Tech Stack */}
          <div class="pt-8">
            <h3 class="text-white/50 font-mono text-sm uppercase tracking-wider mb-4">
              Tech Expertise
            </h3>
            <div class="flex flex-wrap gap-3 justify-center lg:justify-start">
              {technologies.map((tech) => (
                <div class="px-4 py-2 rounded-full glass hover:bg-white/[0.05] transition-colors">
                  <span class="text-white/70 text-sm">{tech}</span>
                </div>
              ))}
            </div>
          </div>
        </div>

        {/* Code Editor */}
        <div class="relative w-full max-w-2xl mx-auto lg:max-w-none">
          <div class="card backdrop-blur-lg">
            {/* Editor Header */}
            <div class="bg-dark-300/50 p-4 border-b border-white/5">
              <div class="flex items-center">
                <div class="flex gap-2">
                  <div class="w-3 h-3 rounded-full bg-red-500/30"></div>
                  <div class="w-3 h-3 rounded-full bg-yellow-500/30"></div>
                  <div class="w-3 h-3 rounded-full bg-green-500/30"></div>
                </div>
                <div class="flex-1 flex justify-center">
                  <span class="text-white/50 text-sm font-mono px-3 py-1 rounded-md bg-dark-400/50">
                    philosophy.ts
                  </span>
                </div>
              </div>
            </div>

            {/* Editor Content */}
            <div class="p-6 space-y-4 font-mono text-sm">
              {/* Against Section */}
              <div class="space-y-4">
                <div class="flex items-center gap-3">
                  <span class="text-red-400/90 font-mono">// What I am against is The "Hustle Culture" Trap</span>
                  <span class="px-2 py-0.5 text-xs font-mono bg-red-500/10 text-red-400/90 rounded-full">
                    @deprecated
                  </span>
                </div>
                <div class="pl-6 space-y-2">
                  <div class="relative">
                    <div class="absolute -left-4 top-0 bottom-0 w-[2px] bg-red-400/20"></div>
                    <div class="space-y-2 text-red-400/70 font-mono leading-relaxed line-through opacity-70">
                      <p>Sleep for 28 days,</p>
                      <p>grind for 48 hours,</p>
                      <p>cry about burnout.</p>
                      <p>Repeat.</p>
                    </div>
                  </div>
                </div>
              </div>

              {/* Current Philosophy Section */}
              <div class="space-y-4 pt-6">
                <div class="flex items-center gap-3">
                  <span class="text-emerald-400/90 font-mono">// What I believe in is Sustainable Development Philosophy</span>
                  <span class="px-2 py-0.5 text-xs font-mono bg-emerald-500/10 text-emerald-400/90 rounded-full">
                    @current
                  </span>
                </div>
                <div class="pl-6 space-y-2">
                  <div class="relative">
                    <div class="absolute -left-4 top-0 bottom-0 w-[2px] bg-emerald-400/20"></div>
                    <div class="space-y-2 text-emerald-400/90 font-mono leading-relaxed">
                      <p>Consistent daily progress</p>
                      <p>15 minutes daily > 48 hours of burnout</p>
                      <p>Sustainable development</p>
                      <p>Work-life harmony</p>
                    </div>
                  </div>
                </div>
              </div>

              {/* Philosophy Constant */}
              <div class="pt-6 space-y-2">
                <div class="text-blue-400/90">const</div>
                <div class="pl-4">
                  <span class="text-green-400/90">philosophy</span>
                  <span class="text-white/70"> = </span>
                  <span class="text-yellow-300">"Small steps daily > Giant leaps at deadline"</span>
                  <span class="text-white/70">;</span>
                </div>
              </div>

              {/* Call to Action */}
              <div class="pt-6 space-y-2">
                <div class="text-purple-400/90 font-mono">// Let's Connect</div>
                <div class="pl-4 space-y-1">
                  <p class="text-white/70">Want to discuss sustainable development practices?</p>
                  <p class="bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent font-medium">
                    Let's grab coffee â˜•
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {/* Scroll Indicator */}
  <div class="absolute bottom-8 sm:bottom-12 left-1/2 -translate-x-1/2 flex flex-col items-center 
              gap-2 opacity-80 hover:opacity-100 transition-opacity cursor-pointer"
       onclick="document.getElementById('about').scrollIntoView({ behavior: 'smooth' })">
    <span class="text-white/50 text-xs sm:text-sm font-mono tracking-wide">Scroll to Explore</span>
    <div class="w-5 sm:w-6 h-8 sm:h-10 border-2 border-white/20 rounded-full p-1">
      <div class="w-1 sm:w-1.5 h-1 sm:h-1.5 bg-white/50 rounded-full mx-auto animate-scroll-down"></div>
    </div>
  </div>
</section>

<style>
  .bg-grid-pattern {
    background-image: linear-gradient(rgba(255, 255, 255, 0.1) 1px, transparent 1px),
                      linear-gradient(90deg, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
    background-size: 20px 20px;
  }

  @keyframes scroll-down {
    0% {
      transform: translateY(0);
      opacity: 1;
    }
    75% {
      transform: translateY(20px);
      opacity: 0;
    }
    76%, 100% {
      transform: translateY(0);
      opacity: 0;
    }
  }

  .animate-scroll-down {
    animation: scroll-down 2s cubic-bezier(0.65, 0, 0.35, 1) infinite;
  }
</style>