<section id="about" class="py-20 sm:py-32 relative overflow-hidden">
  {/* Background Elements */}
  <div class="absolute inset-0 bg-dark-100"></div>
  <div class="absolute inset-0 bg-grid opacity-[0.02]"></div>
  <div class="absolute inset-0 bg-gradient-radial from-accent/5 via-transparent to-transparent"></div>
  <div class="absolute top-0 right-0 w-96 h-96 bg-primary/5 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-accent/5 rounded-full blur-3xl"></div>

  <div class="container mx-auto px-4 relative">
    <div class="max-w-6xl mx-auto">
      {/* Section Header */}
      <div class="text-center mb-20">
        <h2 class="text-4xl md:text-5xl font-display font-bold mb-6 text-transparent bg-clip-text 
                   bg-gradient-to-r from-[#9b111e] to-[#ff1616]">
          About Me
        </h2>
        <p class="text-base sm:text-lg text-white/70 max-w-2xl mx-auto">
          A problem solver who transforms ideas into impactful solutions
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-10 lg:gap-12 items-center">
        {/* Left Column - Content */}
        <div class="space-y-6 sm:space-y-8 text-center lg:text-left">
          {/* Section Title */}
          <div>
            <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-4">About Me</h2>
            <p class="text-base sm:text-lg text-white/70 max-w-xl mx-auto lg:mx-0">
